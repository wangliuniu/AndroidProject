<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.helloworld">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity android:name="com.example.myapplication.activity.PlayRecordActivity"></activity>
        <activity android:name="com.example.myapplication.activity.VideoHistoryActivity" />
        <activity android:name="com.example.myapplication.activity.ExerciseDetailActivity" />
        <activity android:name="com.example.myapplication.activity.ChangeUserActivity" />
        <activity android:name="com.example.myapplication.activity.UserActivity" />
        <activity android:name="com.example.myapplication.activity.ProtectPasswordActivity" />
        <activity android:name="com.example.myapplication.activity.ForgetPasswordActivity" />
        <activity android:name="com.example.myapplication.activity.SettingActivity" />
        <activity android:name="com.example.myapplication.activity.LoginActivity" />
        <activity android:name="com.example.myapplication.activity.CourseVideoActivity" />
        <activity android:name="com.example.myapplication.activity.RegisterActivity" />
        <activity android:name="com.example.myapplication.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.myapplication.activity.MainActivity" />
    </application>

</manifest>